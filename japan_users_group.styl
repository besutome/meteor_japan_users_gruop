@import 'nib'
@import 'jeet'
@import 'rupture'

body
  background-color #222
  color #eee

  .navbar
    display none

  .intro
    height 300px
    text-align center
    background url(/intro.jpg) no-repeat center center scroll

    h1
      margin-top 50px
      font-size 120px
      text-shadow 0px 0px 10px rgba(255,255,255,1)
      opacity 0.8
      font-weight bold
      color #111
    h2
      text-shadow 0px 0px 10px rgba(255,255,255,1)
      opacity 0.8
      font-weight bold
      font-size 37px
      margin-top -10px
      color #111
